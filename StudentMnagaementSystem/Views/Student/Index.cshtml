@model System.Data.DataTable

@{
    ViewData["Title"] = "Student List";
}

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger">@TempData["DeleteError"]</div>
}

<h2>Student List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Roll No</th>
            <th>Name</th>
            <th>Maths</th>
            <th>Physics</th>
            <th>Chemistry</th>
            <th>English</th>
            <th>Programming</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Rows.Count > 0)
        {
            foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["RollNumber"]</td>
                    <td>@row["Name"]</td>
                    <td>@row["Maths"]</td>
                    <td>@row["Physics"]</td>
                    <td>@row["Chemistry"]</td>
                    <td>@row["English"]</td>
                    <td>@row["Programming"]</td>
                    <td>
                        <a asp-action="Details" asp-route-rollNumber="@row["RollNumber"]" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-rollNumber="@row["RollNumber"]" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="rollNumber" value="@row["RollNumber"]" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this student?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No records found.</td>
            </tr>
        }
    </tbody>
</table>
