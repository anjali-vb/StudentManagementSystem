@model StudentRecordManagementSystem.Models.Entities.Student
@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Details</h2>

<table class="table table-bordered w-50">
    <tr>
        <th>Roll Number</th>
        <td>@Model.RollNumber</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Maths</th>
        <td>@Model.Maths</td>
    </tr>
    <tr>
        <th>Physics</th>
        <td>@Model.Physics</td>
    </tr>
    <tr>
        <th>Chemistry</th>
        <td>@Model.Chemistry</td>
    </tr>
    <tr>
        <th>English</th>
        <td>@Model.English</td>
    </tr>
    <tr>
        <th>Programming</th>
        <td>@Model.Programming</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
