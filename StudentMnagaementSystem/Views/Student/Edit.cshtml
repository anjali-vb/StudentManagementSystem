@model StudentRecordManagementSystem.Models.Entities.Student
@{
    ViewData["Title"] = "Edit Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit Student</h2>

<form asp-action="Edit" method="post" class="w-50">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" maxlength="30" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Roll Number (read-only)</label>
        <input asp-for="RollNumber" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Maths</label>
        <input asp-for="Maths" class="form-control" min="1" max="100" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Physics</label>
        <input asp-for="Physics" class="form-control" min="1" max="100" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Chemistry</label>
        <input asp-for="Chemistry" class="form-control" min="1" max="100" required />
    </div>
    <div class="mb-3">
        <label class="form-label">English</label>
        <input asp-for="English" class="form-control" min="1" max="100" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Programming</label>
        <input asp-for="Programming" class="form-control" min="1" max="100" required />
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
